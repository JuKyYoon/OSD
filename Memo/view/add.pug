html
  head
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://code.getmdl.io/1.1.1/material.indigo-pink.min.css')
    script(defer='', src='https://code.getmdl.io/1.1.1/material.min.js')
  body
    .mdl-grid
      .mdl-layout.mdl-js-layout.mdl-color--grey-100
        main.mdl-layout__content
          .mdl-card.mdl-shadow--6dp
            .mdl-card__title.mdl-color--primary.mdl-color-text--white
              h2.mdl-card__title-text Regiser
            .mdl-card__supporting-text
              form(action='/add' method='post')
                .mdl-textfield.mdl-js-textfield
                  input#name.mdl-textfield__input(type='text')
                  label.mdl-textfield__label(for='name') Name
                .mdl-textfield.mdl-js-textfield
                  input#email.mdl-textfield__input(type='text')
                  label.mdl-textfield__label(for='email') Email
                .mdl-textfield.mdl-js-textfield
                  input#phone.mdl-textfield__input(type='text')
                  label.mdl-textfield__label(for='phone') Phone
                .mdl-textfield.mdl-js-textfield
                  input#userpass.mdl-textfield__input(type='password')
                  label.mdl-textfield__label(for='userpass') Password
                .mdl-textfield.mdl-js-textfield
                  input#cnfuserpass.mdl-textfield__input(type='password')
                  label.mdl-textfield__label(for='cnfuserpass') Confirm Password
            .mdl-card__actions.mdl-card--border
              button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Register
